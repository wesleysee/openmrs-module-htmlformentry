<?xml version="1.0" encoding="UTF-8"?>
<module configVersion="1.1">
	
	<!-- Base Module Properties -->
	<id>htmlformentry</id>
	<name>HTML Form Entry</name>
	<version>${project.parent.version}</version>
	<package>org.openmrs.module.htmlformentry</package>
	<author>Darius Jazayeri</author>
	<description>
			FormEntry in-webapp, using HTML forms
	</description>

	<activator>org.openmrs.module.htmlformentry.HtmlFormEntryActivator</activator>
	
	<updateURL>https://modules.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL>
	<!-- /Base Module Properties -->
	
	<require_version>1.6.3</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.htmlformentry.extension.html.AdminList</class>
	</extension>
	<extension>
		<point>org.openmrs.module.web.extension.FormEntryHandler</point>
		<class>org.openmrs.module.htmlformentry.extension.html.FormEntryHandlerExtension</class>
	</extension>
	
	<!-- AOP
	<advice>
		<point>org.openmrs.api.FormService</point>
		<class>@MODULE_PACKAGE@.advice.DuplicateFormAdvisor</class>
	</advice>
	 /AOP -->
	
	
	<!-- Required Privileges 
	<privilege>
		<name>Form Entry</name>
		<description>Allows user to access Form Entry pages/functions</description>
	</privilege>
	 /Required Privileges -->


	<!-- Required Global Properties --> 
	<globalProperty>
		<property>htmlformentry.dateFormat</property>
		<defaultValue></defaultValue>
		<description>
			Always display dates in HTML Forms in this (Java) date format. E.g. "dd/MMM/yyyy" for 31/Jan/2012. 
		</description>
	</globalProperty>
	<globalProperty>
		<property>htmlformentry.showDateFormat</property>
		<defaultValue>true</defaultValue>
		<description>
			Set to true if you want static text for the date format to be displayed next to date widgets, else set to false. 
		</description>
	</globalProperty>
	<globalProperty>
		<property>htmlformentry.pdfEnabled</property>
		<defaultValue>false</defaultValue>
		<description>
			Set to true if you want to enable PDF view of forms, else set to false. wkhtmltopdf needs to be installed for this to work. 
		</description>
	</globalProperty>
	<globalProperty>
		<property>htmlformentry.pdfPageSize</property>
		<defaultValue>Letter</defaultValue>
		<description>
			Specify the page size of PDF. A4, Letter, Legal, etc. 
		</description>
	</globalProperty>
	<globalProperty>
		<property>htmlformentry.wkhtmltopdfPath</property>
		<defaultValue></defaultValue>
		<description>
			 Full path to wkhtmltopdf, e.g. /home/user/wkhtmltopdf/wkhtmltopdf. If wkhtmltopdf is in system PATH, then there's no need to set this.
		</description>
	</globalProperty>
	<globalProperty>
		<property>htmlformentry.wkhtmltopdfArgs</property>
		<defaultValue>--disable-smart-shrinking</defaultValue>
		<description>
			 Extra arguments to wkhtmltopdf
		</description>
	</globalProperty>
	<!-- /Required Global Properties -->
	
	<dwr>
		<allow>
			<create creator="new" javascript="DWRHtmlFormEntryService">
				<param name="class" value="org.openmrs.module.htmlformentry.web.DWRHtmlFormEntryService"/>
				<include method="checkIfLoggedIn"/>
				<include method="authenticate"/>
			</create>
		</allow>

		<signatures>
			<![CDATA[
				import org.openmrs.module.htmlformentry.web.DWRHtmlFormEntryService;
				DWRHtmlFormEntryService.checkIfLoggedIn();
				DWRHtmlFormEntryService.authenticate(String user, String pass);
			]]>
		</signatures>
	</dwr>
	
	<!-- Servlets -->
	<!-- <Accessed through the url /pageContext()/moduleServlet/<moduleId>/<servlet-name> --> 
	<servlet>
		<servlet-name>formPdfServlet</servlet-name>
		<servlet-class>@MODULE_PACKAGE@.web.servlet.FormPdfServlet</servlet-class>
	</servlet>
	<!-- /Servlets -->
	
	
	<!-- Internationalization -->
	<!-- All message codes should start with @MODULE_ID@.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
    <messages>
        <lang>ht</lang>
        <file>messages_ht.properties</file>
    </messages>
	<!-- /Internationalization -->
	
	<mappingFiles>
		HtmlFormEntryHtmlForm.hbm.xml
	</mappingFiles>
	
</module>
